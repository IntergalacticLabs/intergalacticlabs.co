    meta(property="og:title" content=post.title)
    meta(property="og:description" content=post.snippet)
    meta(property="og:image" content="http://intergalacticlabs.co" + post.hero)
    title #{post.title}
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="//fonts.googleapis.com/css?family=Source+Sans+Pro|Titillium+Web" rel="stylesheet" type="text/css")
