    .container
      .row
        .eight.columns
          include ./header.jade
          .content
            !{post.md}
          include ./footer.jade
        .four.columns
          a(href="/#about")
            img(src='/images/IntergalacticLabs3.png' style="margin-top: -20px;")
          ul
            each post in posts
              li
                a(href="/blog" + post.route)= post.date + ' ' + post.title
      hr
      h3 Questions or comments?
      p 
        | Discuss on the
        | <a href="https://intergalacticlabs.slack.com"> slack channel </a>
        | or send a message
      .row
        form.eight.columns(onsubmit="return feedback()")
          .row
            .six.columns
              input.u-full-width(type="text" name="contact-name" id="contact-name" placeholder="Name")
            .six.columns
              input.u-full-width(type="email" name="contact-email" id="contact-email" placeholder="Email")
          .row
            .twelve.columns
              textarea.u-full-width(name="contact-message" id="contact-message" placeholder="Message")
          .row
            .twelve.columns
              button(type="submit" id="contact-send") Send Message

