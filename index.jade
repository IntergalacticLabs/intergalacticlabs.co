            form.eight.columns(onsubmit="return feedback()")
                .row
                    .six.columns
                        input.u-full-width(type="text" name="contact-name" id="contact-name" placeholder="Name")
                    .six.columns
                        input.u-full-width(type="email" name="contact-email" id="contact-email" placeholder="Email")
                .row
                    .twelve.columns
                        textarea.u-full-width(name="contact-message" id="contact-message" placeholder="Message")
                .row
                    .twelve.columns
                        button(type="submit" id="contact-send") Send Message

            hr
            .row
                .twelve.columns.u-textAlignCenter
